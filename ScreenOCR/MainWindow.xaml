<Window x:Class="ScreenOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenOCR"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="ScreenOCR" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="ScreenOCR" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="1" 
                   Text="Press Ctrl+Shift+T to capture a screenshot, then extract text using Google Gemini API." 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center"/>
        
        <Button Grid.Row="2" 
                Content="Open Settings" 
                HorizontalAlignment="Center" 
                Padding="15,5" 
                Margin="0,15,0,0"
                Click="OpenSettings_Click"/>
        
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Name="NotifyIcon"
                         IconSource="/Resources/app_icon.ico"
                         ToolTipText="ScreenOCR">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Capture Screenshot (Ctrl+Shift+T)" Click="CaptureMenuItem_Click"/>
                    <MenuItem Header="Settings" Click="OpenSettings_Click"/>
                    <Separator />
                    <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
