<Window x:Class="ScreenOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenOCR"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="ScreenOCR" Height="220" Width="320"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Background="#121212"
        FontFamily="Segoe UI"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1F1F1F" CornerRadius="8" Margin="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="ScreenOCR" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#FFFFFF"
                       Margin="0,0,0,16"/>
            
            <Border Grid.Row="1" 
                    Background="#252525" 
                    CornerRadius="6" 
                    Padding="16">
                <TextBlock Text="Press Ctrl+Shift+T to capture a screenshot, then extract text using Google Gemini API." 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center"
                           Foreground="#EEEEEE"
                           FontSize="13"
                           LineHeight="20"/>
            </Border>
            
            <Button Grid.Row="2" 
                    Content="Open Settings" 
                    HorizontalAlignment="Center" 
                    Margin="0,16,0,0"
                    Click="OpenSettings_Click"
                    Style="{StaticResource ModernButton}"/>
            
            <!-- System Tray Icon -->
            <tb:TaskbarIcon x:Name="NotifyIcon"
                             IconSource="/Resources/app_icon.ico"
                             ToolTipText="ScreenOCR">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu Background="#252525" BorderBrush="#333333">
                        <ContextMenu.Resources>
                            <Style TargetType="MenuItem">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="8,6"/>
                            </Style>
                            <Style TargetType="Separator">
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="Margin" Value="0,4"/>
                            </Style>
                        </ContextMenu.Resources>
                        <MenuItem Header="Capture Screenshot (Ctrl+Shift+T)" Click="CaptureMenuItem_Click"/>
                        <MenuItem Header="Settings" Click="OpenSettings_Click"/>
                        <Separator />
                        <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </Grid>
    </Border>
</Window>
