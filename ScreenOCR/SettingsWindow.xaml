<Window x:Class="ScreenOCR.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenOCR"
        mc:Ignorable="d"
        Title="Settings" Height="250" Width="500" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Google Gemini API Settings" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="1" 
                   Text="API Key:" 
                   VerticalAlignment="Center"/>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <PasswordBox x:Name="ApiKeyPasswordBox" 
                         Margin="0,5,10,0" 
                         PasswordChanged="ApiKeyPasswordBox_PasswordChanged"/>
            <Button Grid.Column="1" 
                    Content="Show" 
                    Width="60" 
                    Margin="0,5,0,0"
                    Click="ShowApiKey_Click"/>
        </Grid>
        
        <TextBlock Grid.Row="3" 
                   Text="Note: You can get your API key from the Google AI Studio website." 
                   TextWrapping="Wrap" 
                   Margin="0,5,0,0" 
                   Foreground="Gray"/>
        
        <StackPanel Grid.Row="4" 
                    VerticalAlignment="Center">
            <CheckBox x:Name="StartWithWindowsCheckBox" 
                      Content="Start with Windows" 
                      Margin="0,10,0,0"
                      Checked="StartWithWindowsCheckBox_CheckedChanged"
                      Unchecked="StartWithWindowsCheckBox_CheckedChanged"/>
            <TextBlock Text="Hotkey: Ctrl+Shift+T (Cannot be changed)" 
                       Margin="0,10,0,0" 
                       Foreground="Gray"/>
        </StackPanel>
        
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="80" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save" 
                    Width="80" 
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
